<div class="container">
  <div class="d-flex justify-content-around">
    <div class="mt-5">
      <div class="d-flex align-items-center p-2">
        <%= link_to trips_path(modal: params[:modal]), class: "back-arrow" do %>
          <i class="fas fa-chevron-left arrow"></i>
        <% end %> <h2 class="back-arrow-text">Create a booking to</h2>
      </div>
        <h2 class="back-arrow-text-2">send your item quickly</h2>
        <h2 class="back-arrow-text-2">and sustainably</h2>
        <%= image_tag('parcour.png', width: "500", height: "300", class: "mt-5") %>
    </div>

    <div class="p-4 booking-form-container">
      <h4 class="booking-form-header"><%= @trip.start_time.strftime("%A, %B %d") %></h4>
      <p><%= @trip.start_time.strftime("%k:%M") %> <%= @trip.start_location %></p>
      <i class="fas fa-long-arrow-alt-down"></i>
      <p> <%= @trip.end_time.strftime("%k:%M") %> <%= @trip.end_location %></p>
      <div class="d-flex justify-content-between">
        <p>Price for one item:</p>
        <%= humanized_money_with_symbol @trip.price %>
      </div>
      <div class="new-trip-form">
        <%= simple_form_for [@trip, @booking] do |f| %>
          <% if params[:size] %>
            <fieldset class="form-group radio_buttons required trip_capacity">
              <legend class="col-form-label pt-0">What size is your item?<abbr title="required">*</abbr></legend>
              <div class="category-wrapper">
                <div class="category-item">
                  <input class="form-check-input radio_buttons required category-selector" type="radio" value="Small" name="booking[size]" id="trip_capacity_small" <%= "checked" if params[:size] == "Small" %>>
                  <label class="form-check-label collection_radio_buttons" for="trip_capacity_small">
                    <div>
                      <p>Small</p>
                      <div class="size-examples">
                        <i class="fas fa-book"></i>
                        <i class="far fa-futbol"></i>
                        <i class="fas fa-laptop"></i>
                      </div>
                    </div>
                  </label>
                </div>
                <div class="category-item">
                  <input class="form-check-input radio_buttons required category-selector" type="radio" value="Medium" name="booking[size]" id="trip_capacity_medium" <%= "checked" if params[:size] == "Medium" %>>
                  <label class="form-check-label collection_radio_buttons" for="trip_capacity_medium">
                    <div>
                      <p>Medium</p>
                      <div class="size-examples">
                        <i class="fas fa-box-open"></i>
                        <i class="fas fa-guitar"></i>
                        <i class="fas fa-suitcase"></i>
                      </div>
                    </div>
                  </label>
                </div>
                <div class="category-item">
                  <input class="form-check-input radio_buttons required category-selector" <%= "checked" if params[:size] == "Large" %> type="radio" value="Large" name="booking[size]" id="trip_capacity_large">
                  <label class="form-check-label collection_radio_buttons" for="trip_capacity_large">
                    <div>
                      <p>Large</p>
                      <div class="size-examples">
                        <i class="fas fa-baby-carriage"></i>
                        <i class="fas fa-bed"></i>
                        <i class="fas fa-couch"></i>
                      </div>
                    </div>
                  </label>
                </div>
              </div>
            </fieldset>
          <% else %>
            <fieldset class="form-group radio_buttons required trip_capacity">
              <legend class="col-form-label pt-0">What size is your item?<abbr title="required">*</abbr></legend>
              <div class="category-wrapper">
                <div class="category-item">
                  <input class="form-check-input radio_buttons required category-selector" type="radio" value="Small" name="booking-size" id="trip_capacity_small" required>
                  <label class="form-check-label collection_radio_buttons" for="trip_capacity_small">
                    <div>
                      <p>Small</p>
                      <div class="size-examples">
                        <i class="fas fa-book"></i>
                        <i class="far fa-futbol"></i>
                        <i class="fas fa-laptop"></i>
                      </div>
                    </div>
                  </label>
                </div>
                <div class="category-item">
                  <input class="form-check-input radio_buttons required category-selector" type="radio" value="Medium" name="booking-size" id="trip_capacity_medium" >
                  <label class="form-check-label collection_radio_buttons" for="trip_capacity_medium">
                    <div>
                      <p>Medium</p>
                      <div class="size-examples">
                        <i class="fas fa-box-open"></i>
                        <i class="fas fa-guitar"></i>
                        <i class="fas fa-suitcase"></i>
                      </div>
                    </div>
                  </label>
                </div>
                <div class="category-item">
                  <input class="form-check-input radio_buttons required category-selector" type="radio" value="Large" name="booking-size" id="trip_capacity_large" >
                  <label class="form-check-label collection_radio_buttons" for="trip_capacity_large">
                    <div>
                      <p>Large</p>
                      <div class="size-examples">
                        <i class="fas fa-baby-carriage"></i>
                        <i class="fas fa-bed"></i>
                        <i class="fas fa-couch"></i>
                      </div>
                    </div>
                  </label>
                </div>
              </div>
            </fieldset>
          <% end %>
          <%= f.input :item, label: 'What item are you sending?' %>
          <%= f.input :description, label: 'Anything else the driver should know?' %>
          <div class="button-position">
            <%= f.submit 'Book this trip', class: "button" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
