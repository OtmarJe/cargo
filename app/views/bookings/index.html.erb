<div class="container">

  <h1><%= @trip.start_location %> <%= @trip.start_time.strftime("%A, %B %d") %></h1>

  <div class="cards d-flex flex-row justify-space-around">
    <% @bookings.each do |booking| %>
      <div class="card">
        <p class="avatar">XX?</p>
        <h3><%= booking.user.first_name %></h3>
        <p><%= booking.item %></p>
        <p><%= booking.size %></p>
      <div>
        <p><%= booking.description %></p>
      </div>
        <div class="button">
        </div>
      </div>
    <% end %>
  </div>


</div>
