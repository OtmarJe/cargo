<h2>Become a Driver</h2>

<%= simple_form_for(@user, url: update_driver_path, html: { method: :patch }) do |f| %>
  <div class="form-inputs">
    <%= f.input :car_type, 
        required: true,
        label: 'What kind of car will you be driving?' %>
    <%= f.input :years_driving, 
        required: true,
        label: "How many years have you had a driver's license?"  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Become a Driver" %>
  </div>
<% end %>

<%= link_to "Back", :back %>